<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpunit.xml.dist">
    <file>src</file>
    <file>registration.php</file>

    <!-- Include the whole PSR12 standard -->
    <rule ref="PSR12">
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
        <exclude-pattern>*.js</exclude-pattern>
        <exclude-pattern>*.css</exclude-pattern>
    </rule>

    <rule ref="Magento2"/>

</ruleset>
